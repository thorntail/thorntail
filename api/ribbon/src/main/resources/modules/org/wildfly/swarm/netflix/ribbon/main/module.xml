<module xmlns="urn:jboss:module:1.3" name="org.wildfly.swarm.netflix.ribbon">

  <dependencies>
    <!-- For when run with bonafide IDE classpath -->
    <system export="true">
      <paths>
        <path name="org/wildfly/swarm/netflix/ribbon"/>
      </paths>
    </system>

    <!-- For when bootstrapped through a fat-jar -->
    <module name="org.wildfly.swarm.bootstrap" optional="true" export="true">
      <exports>
        <include path="org/wildfly/swarm/netflix/ribbon"/>
      </exports>
    </module>

    <module name="org.wildfly.swarm.netflix.ribbon" slot="runtime"/>

  </dependencies>
</module>
