{
  "openapi" : "3.0.0",
  "security" : [
    {
      "BASIC": []
    },
    {
      "APIKey": [],
      "ImplicitOAuth2": [
        "write:pets",
        "read:pets"
      ]
    },
    {
      "JWT": [],
      "ImplicitOAuth2": [
        "write:pets",
        "read:pets"
      ]
    }
  ],
  "components": {
    "securitySchemes": {
      "BASIC": {
        "description": "Just BASIC auth!",
        "type": "http",
        "scheme": "basic",
        "x-vendor-1": 17,
        "x-vendor-2": "foo"
      },
      "APIKey": {
        "description": "Simple API Key auth in header.",
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      },
      "JWT": {
        "description": "Jot auth",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "ImplicitOAuth2": {
        "description": "OAuth, the best auth.",
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "https://example.com/api/oauth/dialog",
            "scopes": {
              "write:pets": "modify pets in your account",
              "read:pets": "read your pets"
            }
          },
          "x-vendor-1": "flow-info-1",
          "x-vendor-2": "flow-info-2"
        }
      }
    }
  }
}
