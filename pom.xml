        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.wildfly.swarm</groupId>
        <artifactId>wildfly-swarm-io</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.wildfly.swarm</groupId>
        <artifactId>wildfly-swarm-jca</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
