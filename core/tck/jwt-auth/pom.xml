  <artifactId>thorntail-tck-jwt-auth</artifactId>
  <name>TCK: MicroProfile JWT Auth</name>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.20</version>
        <configuration>
